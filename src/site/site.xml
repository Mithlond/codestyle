    <custom>
        <fluidoSkin>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
        </fluidoSkin>
    </custom>

    <body>
        <head>
            <!-- Add syntax highlighter -->
            <link href="http://alexgorbatchev.com/pub/sh/current/styles/shThemeDefault.css"
